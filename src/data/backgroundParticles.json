{
  "autoPlay": true,
  "clear": true,
  "fullScreen": {
    "enable": true,
    "zIndex": -1
  },
  "detectRetina": true,
  "fpsLimit": 120,
  "interactivity": {
    "events": {
      "onClick": {
        "enable": true,
        "mode": "push"
      },
      "onHover": {
        "enable": true,
        "mode": "slow"
      },
      "resize": {
        "enable": true
      }
    },
    "modes": {
      "push": {
        "quantity": 4
      },
      "slow": {
        "factor": 3,
        "radius": 100
      }
    }
  },
  "particles": {
    "color": {
      "value": "#aaaaaa"
    },
    "move": {
      "enable": true,
      "speed": 0.5,
      "outModes": {
        "default": "out"
      }
    },
    "number": {
      "density": {
        "enable": true,
        "width": 1920,
        "height": 1080
      },
      "value": 80
    },
    "opacity": {
      "value": 0.8
    },
    "shape": {
      "type": "circle"
    },
    "size": {
      "value": {
        "min": 1,
        "max": 5
      }
    },
    "links": {
      "enable": true,
      "distance": 150,
      "opacity": 0.6,
      "color": {
        "value": "#aaaaaa"
      }
    }
  },
  "pauseOnBlur": true,
  "pauseOnOutsideViewport": true,
  "zLayers": 100,
  "motion": {
    "reduce": {
      "factor": 4,
      "value": true
    }
  }
}